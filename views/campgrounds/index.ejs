<% layout('layouts/boilerplate') %>

<div id="map" style="width: 100%; height: 350px;"></div>

<div class="container mt-4">
    <h1 class="mb-2">All Campgrounds</h1>

        <% for( let campground of campgrounds ) { %>
            <div class="card mb-3">
                <div class="row g-0">
                    <div class="col-md-4" style="margin:auto;">
                        <% if(campground.images.length){ %>
                            <img class="img-fluid" style="width: 420px; height: 250px;" src=" <%= campground.images[0].url %> " alt="">
                        <% } else { %> 
                            <img class="img-fluid rounded-start" src="https://res.cloudinary.com/dywedcwsv/image/upload/v1694667254/CampHub/wska1zbuzhygexaoyhz6.jpg" alt="">
                        <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= campground.title %></h5>
                            <p class="card-text"><%= campground.description %></p>
                            <p>
                                <small class="text-muted"><%= campground.location %></small>
                            </p>
                            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">View <%= campground.title %></a>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
</div>

    <script>
        const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
        const campgrounds =  {features: <%- JSON.stringify(campgrounds) %>};
    </script>
    
    <script src="/javascripts/clusterMap.js"></script>